/* pages/biji2/biji2.wxss */

page{
    background: #efeff4;
  }
  .container{
    flex-wrap: wrap;
    font-family: '微软雅黑';
    padding: 30rpx;
   
    /* background: #89a9d7; */
  }
  .item{
    width: 30%;
    height: 260rpx;
    border-radius: 20rpx;
    position: relative;
    box-sizing: border-box;
    margin:10rpx;
    display: flex; 
    flex-direction: row;
    border: 6rpx dotted #d9d9d9;
    flex-flow:column nowrap;
    /* background-color: aqua; */
  }
  .addnote{
    display: flex;
    justify-content: center;
    align-items: center;
  }
  
  .item .content{
    width:100%;
    flex-flow:row nowrap;
    align-items:center;
    display: flex;
    border-top-left-radius:20rpx;
    border-top-right-radius:20rpx;
    overflow: hidden;
    flex: 1;
    line-clamp:3;
    background: #fde3d5;
  }
  .item .bottom{
    border-bottom-left-radius:20rpx;
    border-bottom-right-radius:20rpx;
    display: flex;
    flex-flow:row nowrap;
    align-items:center;
    justify-content:center;
    width:100%;
    height: 80rpx;
    background:#9f7968;
    font-size: 22rpx;
  }
  .item  .txt{
    flex: 1;
    text-align: center;
  }
  .item .content .txt{
    padding: 5%;
    font-size: 28rpx;
    text-overflow:ellipsis;
    text-align: center;
    overflow:hidden; 
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 3;
  }
  .item .bottom .txt{
    color: #fff;
  }

  .tabs_title{
    display: flex;
    padding: 20rpx;
    background-color: #87CEEB;
    flex-direction: column;

  }
  .title_item{
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    width: 200rpx;
  }
  .activer{
    color: #87CEEB;
    background-color: azure;
    border-top: 10rpx solid azure;
    border-bottom: 10rpx solid azure;
  }
  