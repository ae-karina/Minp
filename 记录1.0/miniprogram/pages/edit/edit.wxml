<!--pages/edit/edit.wxml-->
<view class="container">
  <view class='title'>
    <input bindinput='title' placeholder-class="placeholder" placeholder="在此输入标题（可选）" value="{{edcontent.title}}" />
  </view>
  <view class='row'>
        <textarea class='text' maxlength="5000"  placeholder-class="placeholder"  bindinput="content"
        focus="{{focus}}" auto-focus="true" value="{{edcontent.content}}" placeholder="点击添加文本" />
    </view>











</view>

   
    <view class="picker">
      分类：{{edcontent.tishi}}
    </view>



  <view class="img-wrap">
 
 <block wx:for="{{images}}" wx:key="index">
   <view class="one-img">
     <image src="{{item}}" class="img-choose" mode="aspectFill"></image>
     <image src="/images/shangchu.png" class="close-img" bindtap="deleteimage" data-src="{{item}}"></image>
   </view>
 </block>
 <view class="one-img" bindtap="upimages" wx:if="{{images.length < 3}}">
   <image src="/images/zhaopian.png" class="img-choose"></image>
 </view>
</view>



  <view style="text-align: center;">
    <text>{{edcontent.cTime}}</text>
  </view>
    <view class='bottom'>
        <button bindtap='update' class='btn success'>保存</button>
        <button bindtap='delete' class='btn success'>删除</button>
    </view>