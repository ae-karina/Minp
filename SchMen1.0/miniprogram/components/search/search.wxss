/* components/search/search.wxss */

.container{position:fixed;left:0;top:10%;width:100%;height:112rpx;z-index:9999; overflow:hidden;background-color: #e8989a;}
.containerFocus{ position:fixed;left:0;top:0;width:100%;height:100%;z-index:9999; background:rgb(243, 240, 240);}

.search{display:flex;align-items:center;margin:10rpx;width: 98%;}
.search-text{display:flex;align-items:center;flex:1;border:1px #467cb3 solid;border-radius:10rpx; height:70rpx;
  background:rgb(255, 255, 255);}

.search-text  input{flex:1;text-align: center;}
.search-cancel{margin:0 10rpx;}
.search-history{display:flex; justify-content:space-between;margin:20rpx; margin-bottom:30rpx;}
.search-history-btn{margin-bottom:30rpx;}
.search-history-btn text{border:1px #f3eded solid; padding:10rpx 20rpx; background:white; border-radius: 20rpx;margin:10rpx;}
.searchList-item{height:120rpx; border-bottom:1px #f3f1f1 solid; padding:13rpx; display:flex; background-color: rgb(255, 255, 255);}

.searchList-item image{width:120rpx; height:120rpx; border-radius:10%;}

.content{
  margin-left:16rpx;
  font-size: 33rpx;
  color: rgb(250, 2, 64);
  margin-bottom: 13rpx;
 
  font-weight: bold;
  width: 400rpx;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: normal !important;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}
