/* pages/detail/detail.wxss */

/* 已检查 */
/* 未完全优化 */
page {
    background-color: rgb(242, 242, 244);
  }
  
  .delete {
    color: #586B94;
    position: absolute;
    top: 10rpx;
    right: 40rpx;
    font-size: 30rpx;
  }
  
  /* 评论部分 */
  .comment-box {
    background-color: white;
    display: flex;
    flex-direction: row;
    padding-top: 20rpx;
  }
  
  .comment-one {
    display: flex;
    flex-direction: row;
    margin: 0 20rpx 40rpx 20rpx;
  }
  
  .comment-face {
    width: 70rpx;
    height: 70rpx;
    border-radius: 50rpx;
    margin-right: 20rpx;
  }
  
  .nickname-time {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    width: 600rpx;
  }
  
  .comment-nickname {
    color: #586B94;
    font-weight: 550;
   
    font-size: 30rpx;
  }
  
  .comment-time {
    color: #7F7F7F;
    font-size: 26rpx;
  }
  
  .comment-text {
    margin-top: 14rpx;
   
    font-size: 28rpx;
    width: 606rpx;
        
    word-wrap: break-word;
    word-break: break-all;
    
    letter-spacing: 2rpx;
    display: inline-block;
  }
  
  .comment-obj {
    color: #586B94;
    font-weight: 550;
  }
  
  /* 发布评论 */
  .pub-comment {
    background-color: white;
    padding: 20rpx 40rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    position: fixed;
    bottom: 0;
  }
  
  .pub-left {
    background-color: #fff;
    color: #7F7F7F;
    border-radius: 10rpx;
    margin-right: 20rpx;
  }
  
  .pub-input {
    padding: 10rpx 20rpx;
    width: 500rpx;
    background-color: rgb(250, 251, 253);
  }
  
  .pub-button {
    color: #7F7F7F;
    border: solid 1rpx #7F7F7F;
    border-radius: 10rpx;
    padding: 10rpx 20rpx;
  }
  
  
  
  .message {
    display: flex;
    flex-direction: row;
    background-color: white;
    position: relative;
    padding: 10rpx 20rpx 10rpx 20rpx;
  }
  
  .face-img {
    width: 70rpx;
    height: 70rpx;
    border-radius: 50%;
    background: -webkit-linear-gradient(top, #e7e7e7, #f0efed, #f0efed);
  }
  
  /*右半部分*/
  .right {
    width: 580rpx;
  }
  
  /* 昵称 */
  .nickname {
    font-size: 30rpx;
    letter-spacing: 2rpx;
    margin-left: 20rpx;
    width: 450rpx;
    display: inline-block;
    
  }
  
  .message-text {
    width: 600rpx;
    margin-top: 20rpx;
    word-wrap: break-word;
    word-break: break-all;
    font-size: 28rpx;
    letter-spacing: 2rpx;
    display: inline-block;
  
  }
  
  
  .time {
    color: #7F7F7F;
    margin-right: 20rpx;
    font-size: 26rpx;
    margin: 7rpx 0 0 20rpx;
  }
  
  /* 互动 模块 */
  .hudong-img {
    width: 30rpx;
    height: 30rpx;
    margin-right: 10rpx;
  }
  
  .share-text {
    color: #7F7F7F;
  }
  
  .hudong-box {
    height: 60rpx;
    display: flex;
    flex-direction: row;
    color: #7F7F7F;
    font-size: 24rpx;
    justify-content: space-evenly;
    margin: 20rpx 0 0 -20rpx;
  }
  
  .hudong-cell {
    display: flex;
    flex-direction: row;
    align-items: center;
    font-size: 24rpx;
  
  }
  
  .hudong-cell2 {
    display: flex;
    flex-direction: row;
    align-items: center;
    font-size: 24rpx;
  
  }
  .hudong-cell22 {
    display: flex;
    flex-direction: row;
    align-items: center;
    font-size: 24rpx;
    margin-left: 5rpx;
  
  }
  
  .hudong-cell222 {
    display: flex;
    flex-direction: row;
    align-items: center;
   
    margin-left: 20rpx;
  
  }
  
  
  
  
  /* 动态图片 */
  .imags-wrap {
    margin-top: 20rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
  }
  
  .image-2-3 {
    width: 180rpx;
    height: 180rpx;
    margin-right: 8rpx;
    background: -webkit-linear-gradient(top, #e7e7e7, #f0efed, #f0efed);
    border-radius: 15rpx;
  }
  
  
  .share-button {
    background-color: white;
    margin-left: 30rpx;
  }
  
  .timebox {
    display: flex;
    flex-direction: row;
    align-items: center;
  }
