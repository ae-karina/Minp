page {
    background-color: rgb(242, 242, 244);
    height: 100%;
  }
  
  
  
  /* 主体内容 */
  .message {
    display: flex;
    flex-direction: row;
    position: relative;
    width: 99%;
    margin: 6rpx;
    background-color: white;
    border-radius: 25rpx;
  }
  .littlemessage {
    margin: 20rpx;
    width: 700rpx;
  }
  /* 上半部分 */
  .top {
    display: flex;
    flex-direction: row;
  }
  .face-img {
    width: 80rpx;
    height: 80rpx;
    margin-right: 15rpx;
    border-radius: 50%;
    background: -webkit-linear-gradient(top, #e7e7e7, #f0efed, #f0efed);
  }
  .top-right {
    margin-left: 10rpx;
  }
  .nickname {
    display: inline-block;
    width: 400rpx;
    font-size: 30rpx;
    letter-spacing: 2rpx;
  }
  .time {
    margin: 7rpx 20rpx 0 0;
    color: #7F7F7F;
    font-size: 26rpx;
  }
  
  /*下半部分*/
  /* .bottom {
    width: 580rpx;
  } */
  .topic {
    margin-top: 20rpx;
    margin-left: 14rpx;
    color: #344CC6;
    font-weight: 520;
    font-size: 28rpx;
  }
  .message-text{
    overflow:hidden; 
    display: inline-block;
    margin: 5rpx 20rpx 0 20rpx;
    text-align: justify;
    font-size: 28rpx;
    word-wrap: break-word;
    word-break: break-all;
    letter-spacing: 2rpx;
    text-overflow:ellipsis;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 10;
    /* width: 600rpx; */
    /* padding: 5%;
    font-size: 28rpx;
    text-align: center; */
  }
