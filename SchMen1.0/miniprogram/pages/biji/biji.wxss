/* pages/biji/biji.wxss */

page{
    background: #efeff4;
  }
  .container{
    flex-wrap: wrap;
    font-family: '微软雅黑';
    padding: 30rpx;
    /* background: #89a9d7; */
  }
  .item{
    display: flex; 
    position: relative;
    width: 30%;
    height: 260rpx;
    margin:10rpx;
    flex-direction: row;
    flex-flow:column nowrap;
    border: 6rpx dotted #d9d9d9;
    border-radius: 20rpx;
    box-sizing: border-box;
    /* background-color: aqua; */
  }
  .addnote{
    display: flex;
    justify-content: center;
    align-items: center;
  }
  
  .item .content{
    overflow: hidden;
    display: flex;
    flex: 1;
    flex-flow:row nowrap;
    width:100%;
    background: #fde3d5;
    align-items:center;
    line-clamp:3;
    border-radius: 20rpx 20rpx 0 0;
  }
  .item .bottom{
    display: flex;
    justify-content:center;
    flex-flow:row nowrap;
    align-items:center;
    width:100%;
    height: 80rpx;
    background:#9f7968;
    font-size: 22rpx;
    border-radius: 0 0 20rpx 20rpx;
  }
  .item .txt{
    flex: 1;
    text-align: center;
  }
  .item .content .txt{
    overflow:hidden; 
    padding: 5%;
    font-size: 28rpx;
    text-overflow:ellipsis;
    text-align: center;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 3;
  }
  .item .bottom .txt{
    color: #fff;
  }
  .btitle{
    position: fixed;
    top: 0;
    width:100%;
    background-color: #e8989a;
    /* background-color: rgb(184, 184, 255,.3); */
    z-index:9999;
  }
  .ctitle{
    margin: 0 50rpx;
    width: 260rpx;
    height: 70rpx;
    line-height: 70rpx;
    text-align: center;
    font-size: 45rpx;
    font-weight: bold;
    border-radius: 20rpx;
    background-color: #a3cef1;
  }
  .dtitle{
    margin: 4rpx 97rpx;
    color: #fff;
  }
  .tabs{
    position: absolute;
    top: 56%;
    left: 8%;
    z-index:9999
  }
  .tabs_title{
    display: flex;
    padding: 20rpx;
    flex-direction: column;
    background-color: #a3cef1;
    border-radius: 0 0 20rpx 20rpx; 
  }
  .title_item{
    display: flex;
    flex: 1;
    width: 200rpx;
    flex-direction: column;
    justify-content: center;
    align-items: center;
  }
  .activer{
    color: #87CEEB;
    background-color: azure;
    border-top: 10rpx solid azure;
    border-bottom: 10rpx solid azure;
  }
  